{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node10",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    /* Allow 'import x from y' when a module doesn't have a default export. */
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": ["src"]
}
